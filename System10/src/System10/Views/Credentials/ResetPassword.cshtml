@using Microsoft.AspNetCore.Http.Authentication
@inject SignInManager<ApplicationUser> SignInManager
@model System10.Models.MangeCredentialViewModel

    @{
        ViewData["Title"] = "Rest Password";
    }
    <h2>Create</h2>
    <form asp-action="ResetPassword" asp-controller="Credentials">
        <p class="text-info">
            @ViewData["ErroMessage"]
        </p>
      

        <div class="form-horizontal">
            <h4>DboCredential</h4>
            <hr />
            <input asp-for="UserName" type="hidden" value="@ViewData["userName"]" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" />
                       
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label asp-for="NewPassword"></label>
                        <input type="password" asp-for="NewPassword" />
                      
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label asp-for="ConfirmPassword"></label>
                        <input type="password" asp-for="ConfirmPassword" />
                       
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Reset" class="btn btn-default" />
                </div>
            </div>
        </div>
        
        
       
        </form>


